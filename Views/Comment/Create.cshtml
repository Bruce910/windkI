@model Final10._14.Models.TComment

@{
    ViewData["Title"] = "新增留言";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" id="commentForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FMemberId" class="control-label">會員ID</label>
        <input asp-for="FMemberId" class="form-control" />
        <span asp-validation-for="FMemberId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FContent" class="control-label">內容</label>
        <textarea asp-for="FContent" class="form-control" id="editor" rows="5"></textarea>
        <span asp-validation-for="FContent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="新增" class="btn btn-primary" />
        <a asp-action="List" class="btn btn-secondary">返回列表</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // 每30秒保存一次草稿
        setInterval(function() {
            var form = document.getElementById('commentForm');
            var formData = new FormData(form);
            var comment = {};
            for (var pair of formData.entries()) {
                comment[pair[0]] = pair[1];
            }
            
            fetch('/Comment/SaveDraft', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(comment)
            });
        }, 1000);
    </script>
}
