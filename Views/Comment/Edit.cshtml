@model Final10._14.Models.TComment

@{
    ViewData["Title"] = "修改留言";
}

<h1>@ViewData["Title"]</h1>

<h4>留言</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FCommentId" />
            <div class="form-group">
                <label asp-for="FPostId" class="control-label">文章編號</label>
                <input asp-for="FPostId" class="form-control" readonly />
                <span asp-validation-for="FPostId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FUserId" class="control-label">會員編號</label>
                <input asp-for="FUserId" class="form-control" readonly />
                <span asp-validation-for="FUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FContent" class="control-label">留言內容</label>
                <textarea asp-for="FContent" class="form-control" rows="5"></textarea>
                <span asp-validation-for="FContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="儲存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">返回留言列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
