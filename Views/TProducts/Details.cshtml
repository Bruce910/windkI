@model Final10._14.Models.TProduct

@{
    ViewData["Title"] = "詳細資料";
}

<h1>內容</h1>

<div>
    <h4>產品</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            產品名稱
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FProductName)
        </dd>
        <dt class="col-sm-2">
            產品類別
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FProductCategoryId)
        </dd>
        <dt class="col-sm-2">
            產品描述
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FDescription)
        </dd>
        <dt class="col-sm-2">
            銷售量
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FSales)
        </dd>
        <dt class="col-sm-2">
            庫存量
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FStock)
        </dd>
        <dt class="col-sm-2">
            單位幫助點數
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FUnitlHelpPoint)
        </dd>
        <dt class="col-sm-2">
            狀態
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FStatus)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.FProductId">編輯</a> |
    <a asp-action="Index">回列表</a>
</div>
